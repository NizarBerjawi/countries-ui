{
    "endOfLine": "lf",
    "jsxSingleQuote": true,
    "overrides": [
        {
            "files": [
                "*.html",
                "*.json",
                "*.yaml",
                "*.yml",
                "*.md",
                "*.markdown"
            ],
            "options": {
                "singleQuote": false,
                "tabWidth": 4,
                "useTabs": false
            }
        }
    ],
    "printWidth": 80,
    "semi": true,
    "singleQuote": true,
    "tabWidth": 2,
    "trailingComma": "all",
    "useTabs": false,
    "importOrder": [
        "<THIRD_PARTY_MODULES>",
        "^@api/(.*)$",
        "^@components/(.*)$",
        "^@containers/(.*)$",
        "^@hooks/(.*)$",
        "^@utils/(.*)$",
        "^[./]"
    ],
    "importOrderSeparation": false,
    "importOrderSortSpecifiers": true
}
