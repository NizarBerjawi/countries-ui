{
    "compilerOptions": {
        "target": "esnext",
        "module": "commonjs",
        "declaration": true,
        "outDir": "dist",
        "strict": true,
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,
        "jsx": "react",
        "baseUrl": ".",
        "paths": {
            "@api/*": ["./src/api/*"],
            "@components/*": ["./src/components/*"],
            "@containers/*": ["./src/containers/*"],
            "@utils/*": ["./src/utils/*"]
        }
    },
    "include": ["./src/**/*"],
    "exclude": ["node_modules", "tools", "./src/data"]
}
